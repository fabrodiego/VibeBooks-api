# === PostgreSQL Database Configuration ===
# (These values are used by the 'db' service to initialize)
POSTGRES_USER=vibebooks
POSTGRES_DB=vibebooks_db
POSTGRES_PASSWORD=YOUR_STRONG_DATABASE_PASSWORD_HERE

# === VibeBooks API Configuration ===
# (These values are injected into the 'api' service)

# A strong, random secret for signing JWT tokens (e.g., a 64-char hex string)
JWT_SECRET=YOUR_64_CHAR_JWT_SECRET_HERE

# Your API key from Google Cloud Console for the Google Books API
GOOGLE_BOOKS_API_KEY=YOUR_GOOGLE_BOOKS_API_KEY_HERE